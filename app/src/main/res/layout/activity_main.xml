<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.erikmejia.onamet.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_name_textview"
        tools:text="City Name"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/min_temp_textview"
        android:text="Min temp"
        app:layout_constraintTop_toBottomOf="@+id/city_name_textview"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toLeftOf="@+id/city_name_textview"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/max_temp_textview"
        android:text="Max temp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintBottom_toBottomOf="@+id/min_temp_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/night_temp_textview"
        android:text="Night temp"
        app:layout_constraintLeft_toRightOf="@+id/max_temp_textview"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/max_temp_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed"
        android:text="Speed"
        app:layout_constraintLeft_toLeftOf="@+id/min_temp_textview"
        app:layout_constraintTop_toBottomOf="@+id/min_temp_textview"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressure"
        android:text="Pressure"
        app:layout_constraintRight_toRightOf="@+id/max_temp_textview"
        app:layout_constraintBottom_toBottomOf="@+id/speed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidity"
        android:text="Humidity"
        app:layout_constraintLeft_toLeftOf="@+id/night_temp_textview"
        app:layout_constraintTop_toTopOf="@+id/pressure"
        app:layout_constraintRight_toRightOf="@+id/night_temp_textview"
        app:layout_constraintBottom_toBottomOf="@+id/pressure" />

    <TextView
        android:text="Rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rain_textview"
        app:layout_constraintLeft_toRightOf="@+id/cloud_textview"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pressure"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/deg_textview"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/weather_descripton_textview"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cloud_textview"
        android:text="Clouds"
        app:layout_constraintTop_toBottomOf="@+id/speed"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/min_temp_textview"
        app:layout_constraintBottom_toTopOf="@+id/weather_descripton_textview"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deg_textview"
        android:text="Degrees"
        app:layout_constraintLeft_toLeftOf="@+id/night_temp_textview"
        app:layout_constraintTop_toBottomOf="@+id/humidity"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/night_temp_textview"
        app:layout_constraintBottom_toTopOf="@+id/weather_descripton_textview"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_descripton_textview"
        android:text="Weather"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/pressure"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="16dp" />


</android.support.constraint.ConstraintLayout>
