<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/forecast_item_icon_wrapper"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/weather_clear"
            android:id="@+id/future_weather_icon"/>

        <!--<com.thbs.skycons.library.SkyconView
            android:id="@+id/forecast_item_icon"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:isStatic = "true"
            app:strokeColor = "#000000"
            app:bgColor = "#ffffff"/>-->

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_horizontal"
                tools:text="Lun 22"
                android:textSize="18sp"
                android:id="@+id/forecast_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                tools:text="28ยบ"
                android:textSize="18sp"
                android:id="@+id/forecast_max_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                tools:text="18ยบ"
                android:textSize="14sp"
                android:id="@+id/future_forecast_min_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_horizontal"
                tools:text="cielo claro"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/forecast_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



</LinearLayout>

