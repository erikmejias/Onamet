<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/today_weather_icon"/>

    <TextView
        android:layout_gravity="center"
        tools:text="28ยบ"
        android:textSize="18sp"
        android:id="@+id/future_forecast_max_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        tools:text="18ยบ"
        android:textSize="18sp"
        android:id="@+id/future_forecast_min_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        tools:text="Lun 22"
        android:textSize="18sp"
        android:id="@+id/future_forecast_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        tools:text="cielo claro"
        android:textSize="18sp"
        android:id="@+id/future_forecast_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>