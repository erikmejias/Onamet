<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_national_bulletin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.erikmejia.onamet.ui.NationalBulletin"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/national_bulletins_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/black_alpha_drawer"
        app:theme="@style/ToolBarStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="NO HAY BOLETINES DISPONIBLES"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
