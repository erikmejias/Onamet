<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/today_forecast_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Upper Section -->

    <RelativeLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/forecast_details_layout"
        android:background="@mipmap/back2"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:id="@+id/today_forecast_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/city_name_text"
                android:text="La Romana"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/today_forecast_upper"
            android:orientation="horizontal"
            android:layout_below="@id/today_forecast_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/forecast_details_max_text"
                    android:text="26ยบ"
                    android:textSize="115sp"
                    android:textColor="#fff"
                    android:layout_marginBottom="-30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/forecast_details_min_text"
                    android:text="22ยบ"
                    android:textSize="50sp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/today_forecast_description_text"
                    android:text="lluvias dispersas"
                    android:textSize="24sp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/today_forecast_icon"
                android:orientation="vertical"
                android:layout_weight="0.96"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.thbs.skycons.library.CloudHvRainView
                android:id="@+id/today_forecast_icon_item"
                app:strokeColor = "#ffffff"
                android:layout_width="350dp"
                android:layout_height="350dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Middle Horizontal Scroll -->

    <HorizontalScrollView
        android:id="@+id/forecast_details_horizontal_hourly"
        android:orientation="horizontal"
        android:layout_below="@id/forecast_details_layout"
        android:background="@color/colorPrimary"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_clear"/>

                <TextView
                    android:text="06:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_clear"/>

                <TextView
                    android:text="08:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_clear"/>

                <TextView
                    android:text="10:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_clouds"/>

                <TextView
                    android:text="12:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_fog"/>

                <TextView
                    android:text="02:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_rain_day"/>

                <TextView
                    android:text="04:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_big_snow"/>

                <TextView
                    android:text="06:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_clear"/>

                <TextView
                    android:text="08:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_few_clouds"/>

                <TextView
                    android:text="10:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/weather_clear_night"/>

                <TextView
                    android:text="12:00"
                    android:gravity="center"
                    android:lineSpacingExtra="-8dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/forecast_details_ad"
        android:layout_below="@id/forecast_details_horizontal_hourly"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="AD GOES HERE"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

    </LinearLayout>

    <!-- Bottom Section-->

    <LinearLayout
        android:background="@color/material_lime_a700"
        android:id="@+id/today_forecast_bottom"
        android:layout_below="@id/forecast_details_ad"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wind_pressure"
                android:id="@+id/today_wind_icon"/>

            <TextView
                android:id="@+id/today_wind_text"
                android:text="4 m/s"
                android:textSize="17sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wind_direction"
                android:id="@+id/today_orientation_icon"/>

            <TextView
                android:id="@+id/today_degrees_text"
                android:text="NE"
                android:textSize="17sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sunrise"
                android:id="@+id/today_sunrise_icon"/>

            <TextView
                android:id="@+id/today_sunrise_text"
                android:text="6:35 AM"
                android:textSize="17sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sunset"
                android:id="@+id/today_sunset_icon"/>

            <TextView
                android:id="@+id/today_sunset_text"
                android:text="7:10 PM"
                android:textSize="17sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>