                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/weather_rain_day"/>

                    <TextView
                        android:id="@+id/forecast_details_four_pm"
                        android:text="@string/_04_00"
                        android:gravity="center"
                        android:lineSpacingExtra="-8dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/weather_big_snow"/>

                    <TextView
                        android:id="@+id/forecast_details_six_pm"
                        android:text="@string/_06_00"
                        android:gravity="center"
                        android:lineSpacingExtra="-8dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/weather_clear"/>

                    <TextView
                        android:id="@+id/forecast_details_eight_pm"
                        android:text="@string/_08_00"
                        android:gravity="center"
                        android:lineSpacingExtra="-8dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/weather_few_clouds"/>

                    <TextView
                        android:id="@+id/forecast_details_ten_pm"
                        android:text="@string/_10_00"
                        android:gravity="center"
                        android:lineSpacingExtra="-8dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/weather_clear_night"/>

                    <TextView
                        android:id="@+id/forecast_details_twuelve_am"
                        android:text="@string/_12_00"
                        android:gravity="center"
                        android:lineSpacingExtra="-8dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

