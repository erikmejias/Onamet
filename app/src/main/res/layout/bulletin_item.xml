<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/bulletins_card"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?android:attr/selectableItemBackground"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bulletins_title_text"
                android:text="Titulo del boletin"
                android:textSize="20sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/bulletins_description_text"
                android:text="Lorem ipsum dolor sit amet. Ip dolor ipsum lot of trouble sitting in the dinning table of Frank Abagnale Jr. The Guy that almost break all of it. Ip dolor ipsum lot of trouble sitting in the dinning table of Frank Abagnale Jr. The Guy that almost break all of it."
                android:textSize="12sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/bulletins_date_text"
                android:layout_marginTop="10dp"
                android:text="Ago 23"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:weightSum="1">

            <ImageView
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/weather_showers_scattered_day"
                android:id="@+id/bulletin_icon" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>