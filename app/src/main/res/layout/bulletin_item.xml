<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/bulletins_card"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bulletins_title_text"
            android:text="Titulo del boletin"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@id/bulletins_title_text"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="14dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bulletins_description_text"
                    android:text="Lorem ipsum dolor sit amet. Ip dolor ipsum lot of trouble sitting in the dinning table of Frank Abagnale Jr. The Guy that almost break all of it. Ip dolor ipsum lot of trouble sitting in the dinning table of Frank Abagnale Jr. The Guy that almost break all of it."
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/bulletins_date_text"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="Ago 23"
                    android:paddingStart="10dp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <!--<LinearLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0.18"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:weightSum="1">

                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/weather_showers_scattered_day"
                    android:id="@+id/bulletin_icon" />

            </LinearLayout>-->

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>